<% provide(:title,'All users') %>
<h1>All users</h1>

  <!--#ページネーションを実装-->
 
  <%= will_paginate %>
  <ul class="users">
  <% @users.each do |user| %>
  <li>
    <%= gravatar_for user,size: 50 %>
    <%= link_to user.name,user %>
  <% if current_user.admin? && !current_page?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "削除しますか?" } %>
  <% end %>
  </li>
  <% end %>
  </ul>      
 <%= will_paginate %>